<section class="breadcrumb-section" style="background-color: {{ section.settings.bg_color }}; color: {{ section.settings.text_color }};">
  {% if section.settings.show_breadcrumbs %}
    <nav class="breadcrumb">
      <a href="{{ routes.root_url }}" style="color: {{ section.settings.link_color }};">{{ section.settings.home_text }}</a>
      {% if section.settings.show_separator %} 
        <span class="separator">{{ section.settings.separator }}</span> 
      {% endif %}
      <span class="current-page" style="color: {{ section.settings.text_color }};">{{ section.settings.current_page_text }}</span>
    </nav>
  {% endif %}
  
<h1 class="section-title" style="
    color: {{ section.settings.heading_color }};
    text-shadow: 2.77px 2.77px 0px rgba(107, 77, 61, 1);
">
  {{ section.settings.heading_text }}
</h1>


</section>

<style>
  .breadcrumb-section {
    padding: {{ section.settings.padding }}px;
    text-align: center;
    border-top: 1px solid #F4E4CC;
    border-bottom: 1px solid #F4E4CC;
  }

  .breadcrumb {
    font-size: {{ section.settings.breadcrumb_font_size }}px;
  }

  .breadcrumb a {
    text-decoration: none;
    font-weight: {{ section.settings.link_weight }};
  }

  .separator {
    margin: 0 5px;
  }

  .section-title {
    font-size: {{ section.settings.heading_size }}px;
    font-weight: {{ section.settings.heading_weight }};
  }
</style>

{% schema %}
{
  "name": "Dynamic Breadcrumb",
  "settings": [
    {
      "type": "header",
      "content": "Breadcrumb Settings"
    },
    {
      "type": "checkbox",
      "id": "show_breadcrumbs",
      "label": "Show Breadcrumbs?",
      "default": true
    },
    {
      "type": "color",
      "id": "bg_color",
      "label": "Background Color",
      "default": "#FFF8E7",
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Breadcrumb Text Color",
      "default": "#411900"
    },
    {
      "type": "color",
      "id": "link_color",
      "label": "Breadcrumb Link Color",
      "default": "#8C7355"
    },
    {
      "type": "text",
      "id": "home_text",
      "label": "Home Link Text",
      "default": "Home"
    },
    {
      "type": "text",
      "id": "current_page_text",
      "label": "Current Page Text",
      "default": "Shop"
    },
    {
      "type": "checkbox",
      "id": "show_separator",
      "label": "Show Separator?",
      "default": true
    },
    {
      "type": "text",
      "id": "separator",
      "label": "Separator Symbol",
      "default": "/"
    },
    {
      "type": "range",
      "id": "breadcrumb_font_size",
      "label": "Breadcrumb Font Size",
      "min": 12,
      "max": 20,
      "default": 14,
      "step": 1
    },
    {
      "type": "select",
      "id": "link_weight",
      "label": "Breadcrumb Link Font Weight",
      "options": [
        { "value": "normal", "label": "Normal" },
        { "value": "bold", "label": "Bold" }
      ],
      "default": "normal"
    },
    {
      "type": "header",
      "content": "Heading Settings"
    },
    {
      "type": "text",
      "id": "heading_text",
      "label": "Section Heading",
      "default": "Products"
    },
    {
      "type": "color",
      "id": "heading_color",
      "label": "Heading Color",
      "default": "#FFBD59"
    },
    {
      "type": "range",
      "id": "heading_size",
      "label": "Heading Font Size",
      "min": 24,
      "max": 50,
      "default": 32,
      "step": 1
    },
    {
      "type": "select",
      "id": "heading_weight",
      "label": "Heading Font Weight",
      "options": [
        { "value": "normal", "label": "Normal" },
        { "value": "bold", "label": "Bold" }
      ],
      "default": "bold"
    },
    {
      "type": "range",
      "id": "shadow_opacity",
      "label": "Text Shadow Opacity",
      "min": 0,
      "max": 1,
      "default": 0.2,
      "step": 0.1
    },
    {
      "type": "range",
      "id": "padding",
      "label": "Padding",
      "min": 10,
      "max": 50,
      "default": 20,
      "step": 5
    }
  ],
  "presets": [
    {
      "name": "Breadcrumb with title",
      "category": "Custom Sections"
    }
  ]
}
{% endschema %}
