{{ 'swiper-bundle.min.css' | asset_url | stylesheet_tag }}
<script src="{{ 'swiper-bundle.min.js' | asset_url }}" defer="defer"></script>

<div class="testimonials-section">
  <div class="container">
    {% if section.settings.title != blank %}
      <h2 class="section-title">{{ section.settings.title }}</h2>
    {% endif %}

    {% if section.settings.subtitle != blank %}
      <p class="section-subtitle">{{ section.settings.subtitle }}</p>
    {% endif %}

    <div class="testimonials-slider">
      <div class="swiper">
        <div class="swiper-wrapper">
          {% for block in section.blocks %}
            <div class="swiper-slide" {{ block.shopify_attributes }}>
              {% if block.settings.image != blank %}
                <div class="testimonial-image">
                  <img
                    src="{{ block.settings.image | img_url: '200x200', crop: 'center' }}"
                    alt="{{ block.settings.author_name }}"
                    loading="lazy"
                    width="100"
                    height="100"
                  >
                </div>
              {% endif %}
              <div class="testimonial-item">
                <div class="testimonial-content">
                  <div class="author-name">{{ block.settings.author_name }}</div>
                  <div class="author-title">{{ block.settings.author_title }}</div>

                  {% if block.settings.rating > 0 %}
                    <div class="rating">
                      <span class="stars">★</span>
                      <span class="rating-value">{{ block.settings.rating }}</span>
                    </div>
                  {% endif %}

                  <blockquote class="testimonial-text">
                    {{ block.settings.testimonial }}
                  </blockquote>
                </div>
              </div>
            </div>
          {% endfor %}
        </div>
      </div>
      <button class="slider-button-prev">‹</button>
      <button class="slider-button-next">›</button>
    </div>
  </div>
</div>

<style>
  .testimonials-section {
    padding: 60px 0 80px 0;
    background-color: #f4e4cc;
    position: relative;
  }

  .testimonials-section .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
    position: relative;
  }

  .testimonials-section .section-title {
    text-align: center;
    color: #ffbd59;
    text-shadow: 2px 2px #6b4d3d;
    font-size: 36px;
    margin-top: 0;
    margin-bottom: 0;
  }

  .testimonials-section .section-subtitle {
    text-align: center;
    color: #8c7355;
    margin-top: 0;
    margin-bottom: 40px;
  }

  .testimonials-section .testimonials-slider {
    position: relative;
    padding: 0 50px; /* Make room for navigation buttons */
  }

  .swiper {
    width: 100%;
    height: 100%;
  }

  .testimonial-item {
    background: white;
    border-radius: 100px;
    padding: 30px;
    text-align: center;
    box-shadow: 0 5px 15px rgba(0, 0, 0, 0.05);
  }

  .testimonial-image {
    width: 120px;
    height: 120px;
    margin: 0 auto;
    position: relative;
    border: 2px solid white;
    border-radius: 61px;
    top: 40px;
  }

  .testimonial-image img {
    width: 100%;
    height: 100%;
    border-radius: 50%;
    object-fit: cover;
  }

  .author-name {
    font-size: 20px;
    font-weight: 600;
    line-height: normal;
    margin-top: 10px;
  }

  .author-title {
    color: #666;
    font-size: 14px;
    margin-bottom: 10px;
    line-height: normal;
  }

  .rating {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 5px;
    margin-bottom: 15px;
  }

  .rating .stars {
    color: #ffd700;
  }

  .rating .rating-value {
    font-weight: 600;
  }

  .testimonial-text {
    font-style: italic;
    color: #8c7355;
    line-height: 1.6;
    margin: 0;
    border: 0;
  }

  /* Navigation buttons */
  .slider-button-prev,
  .slider-button-next {
    position: absolute;
    top: 67%;
    transform: translateY(-50%);
    width: 40px;
    height: 40px;
    background: white;
    border: none;
    border-radius: 50%;
    box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
    cursor: pointer;
    z-index: 10;
    display: flex;
    align-items: center;
    justify-content: center;
    color: --primary-color;
    font-size: 24px;
  }

  .slider-button-prev {
    left: 0;
  }

  .slider-button-next {
    right: 0;
  }

  .slider-button-prev:hover,
  .slider-button-next:hover {
    background: #ff9f43;
    color: white;
  }

  .slider-button-prev.swiper-button-disabled,
  .slider-button-next.swiper-button-disabled {
    opacity: 0.5;
    cursor: not-allowed;
  }

  @media (max-width: 767px) {
    .swiper-wrapper {
      align-items: center;
    }
    .testimonials-section {
      padding: 40px 0;
    }
    .testimonial-item {
      padding: 30px 12px;
    }
    .testimonials-slider {
      padding: 0 40px !important;
    }

    .slider-button-prev,
    .slider-button-next {
      width: 35px;
      height: 35px;
      font-size: 20px;
    }
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', function () {
    const swiper = new Swiper('.swiper', {
      // Enable slide per view based on breakpoints
      breakpoints: {
        // Mobile
        320: {
          slidesPerView: 1,
          spaceBetween: 20,
        },
        // Desktop
        768: {
          slidesPerView: 2,
          spaceBetween: 30,
        },
      },

      // Navigation buttons
      navigation: {
        nextEl: '.slider-button-next',
        prevEl: '.slider-button-prev',
      },

      // Additional parameters
      loop: false,
      grabCursor: true,
      speed: 500,

      // Prevent partial slides
      slidesPerGroup: 1,

      // Improve responsiveness
      observer: true,
      observeParents: true,

      // Enable smooth momentum scrolling
      resistance: true,
      resistanceRatio: 0.85,
    });
  });
</script>

