<div class="marquee-container">
  <div class="marquee">
    <div class="marquee-content">
      {%- assign texts = section.settings.marquee_texts | newline_to_br | split: '<br />' -%}
      {%- for text in texts -%}
        <span class="marquee-item">
          {{ text }}
          <span class="separator">•</span>
        </span>
      {%- endfor -%}
    </div>
    <div class="marquee-content" aria-hidden="true">
      {%- for text in texts -%}
        <span class="marquee-item">
          {{ text }}
          <span class="separator">•</span>
        </span>
      {%- endfor -%}
    </div>
  </div>
</div>

<style>
  .marquee-container {
    width: 100%;
    overflow: hidden;
    background: {{ section.settings.background_color }};
  }

  .marquee {
    display: flex;
    width: fit-content;
  }

  .marquee-content {
    flex-shrink: 0;
    display: flex;
    align-items: center;
    animation: scroll {{ section.settings.marquee_speed }}s linear infinite;
    white-space: nowrap;
  }

  .marquee-item {
    display: inline-flex;
    align-items: center;
    padding: 10px 0;
    color: {{ section.settings.text_color }};
  }

  .separator {
    margin: 0 40px;
    color: {{ section.settings.separator_color }};
  }

  @keyframes scroll {
    from {
      transform: translateX(0);
    }
    to {
      transform: translateX(-100%);
    }
  }
</style>

{% schema %}
{
  "name": "Marquee",
  "settings": [
    {
      "type": "textarea",
      "id": "marquee_texts",
      "label": "Marquee Texts",
      "info": "Enter each text on a new line",
      "default": "First announcement\nSecond announcement\nThird announcement"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background Color",
      "default": "#000000"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text Color",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "separator_color",
      "label": "Separator Color",
      "default": "#ffffff"
    },
    {
      "type": "range",
      "id": "marquee_speed",
      "label": "Marquee Speed (seconds)",
      "min": 5,
      "max": 60,
      "step": 1,
      "default": 25
    }
  ],
  "presets": [
    {
      "name": "Marquee"
    }
  ]
}
{% endschema %}